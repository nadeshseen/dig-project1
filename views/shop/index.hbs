{{# each products }}
  <div class="row">
      {{# each this }}
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <img src="{{ this.imagePath }}" class="img-responsive">
            <div class="caption">
              <h3>{{this.title}}</h3>

              <p class="description">{{this.description}}</p>

              <p class="clearfix">

                <a href="#" class="btn btn-success pull-right" role="button">Add</a>
              </p>
            </div>
          </div>
        </div>
      {{/each }}
  </div>
{{/each}}
